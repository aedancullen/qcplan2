<launch>
  <arg name="calib_file" default="" />

  <node pkg="usb_cam" type="usb_cam_node" name="usb_cam" output="screen">
    <param name="video_device" value="/dev/video0" />
    <param name="image_width" value="640" />
    <param name="image_height" value="480" />
    <param name="pixel_format" value="mjpeg" />
    <param name="framerate" value="60" />
  </node>

  <node pkg="svo_ros" type="svo_node" name="svo" clear_params="true" output="screen" args="--v=0">
    <param name="cam0_topic" value="/usb_cam/image_raw" type="str" />
    <!--<param name="imu_topic" value="/imu/data" type="str" />-->
    <param name="calib_file" value="$(arg calib_file)" />
    <rosparam file="$(find svo_ros)/param/pinhole.yaml" />
    <!--<param name="img_align_prior_lambda_rot" value="5.0" />-->
    <!--<param name="poseoptim_prior_lambda" value="2.0" />-->
    <!--<param name="runlc" value="false" />-->
    <param name="automatic_reinitialization" value="True" />
  </node>

  <!--<node name="vis" pkg="rviz" type="rviz" args=" -d $(find svo_ros)/rviz_config_vio.rviz" />-->
</launch>
